<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MavlinkDashboard" parent="Theme.MaterialComponents.DayNight">
        <item name="colorPrimary">@color/brand</item>
        <item name="colorPrimaryVariant">@color/brandDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowFullscreen">true</item>
        <item name="colorSecondary">@color/brandLight</item>
        <item name="colorSecondaryVariant">@color/brandDark</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <style name="Theme.MavlinkDashboard.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar" />

    <style name="Theme.MavlinkDashboard.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight" />
</resources>